[Unit]
Description=yarrp-sender

After=syslog.target network.target
Before=nginx.service
PartOf=nginx.service

[Service]
Type=forking
#PIDFile=
ExecStartPre=
ExecStart=/usr/local/bin/sender -d -i @INT@ -4 @V4@ -6 @V6@ -f @RCV_DATA@
ExecReload=/usr/local/bin/sender -d -i @INT@ -4 @V4@ -6 @V6@ -f @RCV_DATA@
ExecStop=/usr/bin/pkill sender

[Install]
WantedBy=multi-user.target

